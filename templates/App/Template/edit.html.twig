{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_template_index', 'trans': 'menu.templates'}], template, 'breadcrumb.edit_template') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'title.edit_template'|trans({'template': template.name|transMlang}) }}</h1>
    </div>

    <div class="content-block">
        {{ include('App/Template/_form.html.twig') }}
    </div>
{% endblock %}
