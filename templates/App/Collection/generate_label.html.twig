{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_collection_index', 'trans': 'menu.collections'}], collection, 'Generate label') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'Generate label for collection'|trans({'collection': collection.title}) }}</h1>
    </div>

    <div class="content-block">
        {{ form_start(form) }}
        <div class="row">
            <div class="col s12 l5 offset-l1 xl4 offset-xl2">
                {{ form_row(form.labelSize, {'label' : 'Label size', 'attr': {'data-controller': 'select--default'}} ) }}
                {{ form_row(form.orientation, {'label' : 'Orientation', 'attr': {'data-controller': 'select--default'}} ) }}
                {{ form_row(form.fontSize, {'label' : 'Font size'} ) }}
            </div>
        </div>

        <div class="center-align form-btn-holder">
            <button type="submit" class="btn waves-effect waves-light">{{ 'Download' }}</button>
            <a href="{{ path('app_collection_show', { id : collection.id }) }}"
               class="waves-effect waves-light btn btn-cancel">{{ 'Back'}}</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
