{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_collection_index', 'trans': 'menu.collections'}], item, 'breadcrumb.lend_item') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'title.loan_item'|trans({'item': item.name|transMlang}) }}</h1>
    </div>

    <div class="content-block">
        {{ form_start(form) }}
        <div class="row">
            <div class="s12 l5 offset-l1 xl4 offset-xl2">
                {{ form_row(form.lentAt, {'label' : 'label.loaned_at', 'attr': {'data-controller' : 'datepicker' }} ) }}
            </div>
            <div class="s12 l5 xl4">
                {{ form_row(form.lentTo, {'label' : 'label.loaned_to'} ) }}
            </div>
        </div>

        <div class="center-align form-btn-holder">
            <button type="submit" class="btn waves-effect waves-light">{{ 'btn.submit'|trans }}</button>
            <a href="{{ path('app_item_show', { id : item.id }) }}"
               class="waves-effect waves-light btn btn-cancel">{{ 'btn.cancel'|trans }}</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
