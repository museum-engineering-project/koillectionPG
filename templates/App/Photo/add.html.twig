{% extends 'layout.html.twig' %}

{% set breadcrumb = buildBreadcrumb([{'route': 'app_album_index', 'trans': 'menu.albums'}], album, 'breadcrumb.add_photo') %}

{% block title %}
    {{ renderTitle(breadcrumb) }}
{% endblock %}

{% block breadcrumb %}
    {{ renderBreadcrumb(breadcrumb) }}
{% endblock %}

{% block content %}
    <div class="title-block">
        <h1>{{ 'title.add_album_photo'|trans({'album': album.title|transMlang}) }}</h1>
    </div>
    <div class="clearfix"></div>

    <div class="content-block">
        {{ include('App/Photo/_form.html.twig') }}
    </div>
{% endblock %}
