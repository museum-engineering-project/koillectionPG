<span data-value="{{ datum.value }}"></span>

{% if underlinedTags is defined %}
    {% for value in datum.value|transMlang(app.user.locale)|split(',') %}
        {{ underlinedTags[value|trim] is defined ? underlinedTags[value|trim]|raw : value }}{{ not loop.last ? ',' }}
    {% endfor %}
{% else %}
    {{ datum.value|transMlang(app.user.locale) }}
{% endif %}