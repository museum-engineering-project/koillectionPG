<div class="s10 offset-s1 m5 m10" data-controller="datum-list">
    <input type="hidden"
           id="data_{{ iteration }}_value"
           name="{{ entity }}[data][{{ iteration }}][value]"
           {% if datum is defined %}value="{{ datum.value }}"{% endif %}
           placeholder=" "
           data-datum-list-target="input"
           data-additional-data-target="value"
    >

    <div data-datum-list-target="elementsContainer">

    </div>

    <button type="button" class="btn right" data-action="click->datum-list#addElement">
        {{ 'btn.add_list_element'|trans }}
    </button>
</div>