<div class="collections grid-container-collections">
    {% for album in albums %}
        <div class="collection-element element" data-title="{{ album.title }}" data-filter-target="element">
            <a class="collection-circle-thumbnail" href="{{ path('app_album_show'|applyContext, {'id': album.id}) }}">
                {% if album.image != null %}
                    <img src="{{ asset(album.image) }}" loading="lazy">
                {% else %}
                    <span class="color-avatar circle avatar color-{{ album.color }}">{{ album.title|transMlang|first|upper }}</span>
                {% endif %}
            </a>
            <span class="collection-title">{{ album.title|transMlang }}</span>
            <p class="collection-stats">
                {{ 'counter.photo'|trans({'count': album.cachedValues.counters.photos|default(0)}) }}
            </p>
        </div>
    {% endfor %}
</div>
